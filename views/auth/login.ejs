<form action="/auth/login" method="POST">
  <div class="row">
    <div class="col-1 offset-md-4">
      <label for="auth-email">Email</label>
    </div>
    <div class="col-3">
      <input class="form-control" id="auth-email" type="email" name="email" value="rainbow@example.com">
    </div>
  </div>
  <div class="row gy-2">
    <div class="col-1 offset-md-4">
      <label for="auth-password">Password</label>
    </div>
    <div class="col-3">
      <input class="form-control"id="auth-password" type="password" name="password" value="password">
    </div>
  </div>
  <div class="row gy-2">
    <div class="offset-md-3">
      <button class="btn btn-success"type="submit"> Log in!</button>
    </div>
  </div>
  
</form>



