<h2>Profile Page</h2>

<h3>Welcome to your PROFILE</h3>

<form method="POST" action="/user/profile/edit/<%=currentUser.id%>/?_method=PUT">
    <label for="name">Name</label>
    <input style="width:200px; display:block; text-align:center;"type="text" class="form-control" id="name" name="name" value="<%= currentUser.name.charAt(0).toUpperCase() + currentUser.name.slice(1) %> "required>
    
    <label for="email">Email</label>
    <input style="display:block; text-align:center"id="email" type="email" name="email" value="<%=currentUser.email%>" required>

    <label for="password">Password</label>
    <input style="display:block; text-align:center"id="password" type="password" name="password" required>

    <input type="submit" class="btn btn-primary">
</form>
